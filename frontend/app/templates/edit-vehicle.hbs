<div class="container-fluid">
    <h3 style="text-align:center">Atualizar Veículo</h3>
    <form class="row">
        <div class="form-group col-6">
            <label for="licensePlate">Placa</label>
            <input type="text" class="form-control" id="licensePlate" placeholder="Exemplo: ABC-123" value={{@licensePlate}}>
        </div>
        <div class="form-group col-6">
            <label for="brand">Marca</label>
            <input type="text" class="form-control" id="brand" placeholder="Exemplo: Tesla">
        </div>
        <div class="form-group col-6">
            <label for="model">Modelo</label>
            <input type="text" class="form-control" id="model" placeholder="Exemplo: Model S">
        </div>
        <div class="form-group col-6">
            <label for="version">Versão</label>
            <input type="text" class="form-control" id="version" placeholder="Exemplo: 1.0.1">
        </div>
        <div class="form-group col-6">
            <label for="versyearion">Ano</label>
            <input type="numeric" class="form-control" id="year" placeholder="Exemplo: 2021">
        </div>
        <div class="mt-5 col-12 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>